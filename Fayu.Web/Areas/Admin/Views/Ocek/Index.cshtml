@model List<Ocek>
@{
    ViewData["Title"] = "Outgoing Checks";
}
@section VendorStyles {

    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
    <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-checkboxes-jquery/datatables.checkboxes.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-rowgroup-bs5/rowgroup.bootstrap5.css">
    <!-- Form Validation -->
    <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/umd/styles/index.min.css" />
}
@section VendorScripts {
    <script src="~/vendor/libs/cleavejs/cleave.js"></script>
    <script src="~/vendor/libs/moment/moment.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr.js"></script>
    <script src="~/vendor/libs/select2/select2.js"></script>
    <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
    <!-- Flat Picker -->
    <script src="~/vendor/libs/moment/moment.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr.js"></script>
    <!-- Form Validation -->
    <script src="~/vendor/libs/&#64;form-validation/umd/bundle/popular.min.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/umd/plugin-bootstrap5/index.min.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/umd/plugin-auto-focus/index.min.js"></script>
}
@section PageScripts {
    <script src="~/js/form-layouts.js"></script>
}
@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <a href="/Admin/Dashboard/Index" class="text-muted fw-light">Dashboard /</a> <a href="/Admin/Ocek/Index">Outgoing Checks</a>
</h4>

<!-- Ajax Sourced Server-side -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Ocek</h5>
        <div class="ms-auto">
            <a href="/Admin/Ocek/Upsert" type="button" class="btn btn-primary">Add New Checks</a>
        </div>
    </div>
    <div class="card-datatable text-nowrap">
        <table class="datatables-basic table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Bank</th>
                    <th>Balance</th>
                    <th>Owner/Serial Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.OcekTarih</td>
                        <td>@obj.OcekMusteri </td>
                        <td>@obj.OcekBanka </td>
                        <td>@obj.OcekTutar </td>
                        <td>@obj.OcekSeriNo </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a href="/Admin/Ocek/Upsert?id=@obj.Id" class="btn btn-primary mx-2">
                                    <span class="mdi mdi-square-edit-outline"></span>
                                </a>
                                <a onClick="Delete('/admin/Ocek/delete/@obj.Id')" class="btn btn-danger mx-2"> <span style="color:white;" class="mdi mdi-delete-outline"></span></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Add Role Modal -->
@section Scripts {
    <script src="~/upsert/supplier.js"></script>

}
